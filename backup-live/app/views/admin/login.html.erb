<section classs="admin-login">
  <div class="row">
	  <h3 class="text-center">Welcome To Admin</h3>
	</div>
	<div class="row custom-login">
		<%= form_for(:user, :url => session_path(:user),:remote=>true) do |f| %>
            <div class="field">
              <%= f.email_field :email, autofocus: true %>
            </div>
            <div class="field">
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
            <div class="field sign-in-forget-pass">
              
   					<%= f.submit "Login",:class=>"button" %> 
</div>
<% end %>
	</div>
</section>